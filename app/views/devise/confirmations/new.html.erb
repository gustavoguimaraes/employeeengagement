<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2" %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
     <%= f.submit "Resend confirmation instructions", class: "btn btn-warning" %>
    </div>
  </div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
<%= render "shared/links" %>

 </div>
</div>

<% end %>
